<div>
    <h2> Please Login </h2>
    <%= simple_form_for :auth, url: login_path do |f| %><br>
        <%= f.input :name, input_html: { class: 'form-control' }, placeholder: "Login with your Name" %>
        <%= f.input :password, input_html: { class: 'form-control' }, placeholder: "and Password." %>
        <%= button_to "Login", meals_path, method: :get %>
    <% end %>
</div>

<%= button_to "Create Account", signup_path, method: :get %>