<%if flash[:message] %>
<%= flash[:message] %>
<%end %>
<%= form_for :auth, url: login_path do |f| %><br>
    <%= f.label :name %><br><br>
    <%= f.text_field :name, class: "new-todo" , placeholder: "Login with your name" %><br><br>
    <%= f.label :password %><br><br>
    <%= f.password_field :password, class: "new-todo", placeholder: "and password." %><br><br>
    <%= f.submit "Login" %><br><br>
<% end %>