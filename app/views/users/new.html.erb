<h2> Create an Account </h2>

<%= simple_form_for @user do |f| %><br>
    <%= f.input :name, input_html: { class: 'form-control' }, placeholder: "Enter your name here." %>
    <%= f.input :password, input_html: { class: 'form-control' }, placeholder: "Choose a Password." %>
    <%= f.input :password_confirmation, input_html: { class: 'form-control' }, placeholder: "Confirm Password." %>
    <%= f.submit %> &nbsp; or &nbsp;
<% end %>
    <%= button_to "Go to Login", login_path, method: :get%>